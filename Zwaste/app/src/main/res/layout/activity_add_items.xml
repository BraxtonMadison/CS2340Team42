<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AddItemsActivity">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Things"
        android:textSize="50sp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/addItemName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:hint="Item Info"
        android:textColor="@color/black"
        android:inputType="text"
        android:background="@color/white"/>
    <EditText
        android:paddingTop="15dp"
        android:id="@+id/addItemType"
        android:layout_width= "300dp"
        android:layout_height= "wrap_content"
        android:textSize="23sp"
        android:hint="Item Info"
        android:textColor="@color/black"
        android:inputType="text"
        android:background="@color/white"/>
    <Button
        android:id="@+id/submitItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/secondaryIvory"
        android:textColor="@color/primaryGrey"
        android:text="Submit"/>

</LinearLayout>